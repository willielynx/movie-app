<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2 class="text-center text-capitalize">add a production company</h2>
            <form action="http://localhost:3000/api/production/create"
            method="post"
            class="form" 
            id="productionForm">

            <div class="row mb-3">
                <div class="col">
                    <label for="production" class="form-label"> production company </label>
                    <input type="text" id="production" name="production" class="form-control">
                </div>
            </div>
            <button 
            class="btn btn-primary"
            type="submit"
            role="button">
            Add Production Company
            </button>
            </form>
    </div>
</main>